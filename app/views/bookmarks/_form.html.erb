<div id="bookmark-form">
	<%= form_for @bookmark, :html => { :class => 'form-horizontal' } do |f| %>
		<div class="row">
			<div class="span12">
				<%= f.label "Paste URL Here" %>
				<%= f.text_field :full_url, :class=>"span6", :id=>"full-url" %>
			</div>
		</div>
		<div class="row">
			<div class="span12">
				<%= f.label "Tag it!" %>
				<div class="row">
					<div class="span4 offset4">
						<%= f.text_field :tag_tokens, :data=> {load: @bookmark.tags.to_json }%>
					</div>
				</div>
			</div>
		</div>
		<% if @bookmark.errors.any? %>
			<div class="row">
				<div class="span6 offset3">
					<div class="well errors">
						<% @bookmark.errors.full_messages.each do |msg| %>
							<p><%= msg %></p>
						<% end %>
					</div>
				</div>
			</div>
		<% end %>
		<div class="row form-controls">
			<div class="span4 offset4">		
				<%= f.submit "Bookmark me!", :class => 'btn btn-primary btn-large' %>
			</div>
		</div>
	<% end %>
</div>
