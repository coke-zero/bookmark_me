
<div class="page-header">
  <h1>Site - <%= @site.name  %></h1>
</div>
<div class="row">
	<div class="span12">
		<div class="well">
			<h2>Site Address</h2>
			<h3><%= link_to @site.hostname, @site.hostname %></h3>
		</div>
	</div>
</div>
<table class="table table-striped">
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th>Full URL</th>
		<th>Tags</th>
	</tr>
	<% @site.bookmarks.each do |bookmark| %>
		<tr>
			<td><%= link_to bookmark.name, bookmark_path(bookmark) %></td>
			<td><%= bookmark.description %></td>
			<td><%= link_to bookmark.full_url.truncate(80), bookmark.full_url %></td>
			<td><%= bookmark.tag_list %></td>
		</tr>
	<% end %>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sites_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              site_path(@site),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'All your bookmarks will be destroyed. Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
