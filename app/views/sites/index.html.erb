<%- model_class = Site.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<%= render :partial=>"search" %>
<div class="row">
	<div class="span12">
		<%= will_paginate @sites %>
	</div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Site Name</th>
      <th>URL</th>
      <th>Number of Bookmarks</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= link_to(site.name, site_path(site)) if site.name.present? %></td>
        <td><%= site.hostname %> [ <%= link_to "visit", site.hostname %> ]</td>
        <td><%= site.bookmarks.count %></td>
        <td>
			
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      site_path(site),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'This will destroy all bookmarks under the site. Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
